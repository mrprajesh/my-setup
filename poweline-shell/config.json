{
  "segments": [
    "virtual_env",
    "username",
    "hostname",
    "ssh",
    "cwd",
    "git",
    "hg",
    "jobs",
    "newline",
    "time",
    "root"
  ],
  "cwd": {
    "mode": "dironly",
    "max_depth": 2,
    "full_cwd": "true"
  },
  "vcs": {
    "show_symbol": "true"
  },
  "time": {
    "format": "%H:%M"
  },
  "mode": "flames",
  "theme": "~/.config/powerline-shell/themes/rajz-flames.py"
}
